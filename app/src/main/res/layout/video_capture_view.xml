<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:id="@+id/ll_video_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_start_background"/>
        <Button
            android:id="@+id/btn_start_capture_video"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_start_video"
            android:layout_marginBottom="40dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn_start_capture_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_start_photo"
            android:layout_marginBottom="40dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_change_camera"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_camera"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/pad_10dp"
        android:layout_marginTop="@dimen/pad_10dp"
        />
</RelativeLayout>
